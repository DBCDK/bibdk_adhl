/**
 * Implements hook_worktabs_items().
 *
 * @param $tabs
 * @param bibdkWork $entity
 */
function bibdk_adhl_worktabs_items($tabs, $entity) {
  $tabs['more-about']['adhl'] = array(
    'title' => t('adhl', array(), array('context' => 'bibdk_adhl')),
    'btn_txt_closed' => t('view_more', array(), array('context' => 'bibdk_adhl')),
    'rendered' => drupal_render(bibdk_adhl_get_worktab_content($entity)),
    'weight' => 0,
  );
  return $tabs;
}

/**
 * @param bibdkWork $entity
 * @return array $list
 */
function bibdk_adhl_get_worktab_content($entity){
  $isbn = $entity->getISBN();
  $list = bibdk_adhl_work_field_render($isbn, $entity->getId());
  return $list;
}

